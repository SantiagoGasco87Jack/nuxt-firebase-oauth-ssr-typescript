{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2015",
    "module": "ES2020",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "./src/types",
      "types-module"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
